<!DOCTYPE html>
<html>
<head>
  <title>Forbidden Planet Admin</title>
  <%= stylesheet_link_tag    "dashboard", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "dashboard" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render :partial => 'dashboard/admin_nav', :locals => {:current_user => current_user} %>
<div class="container content">
<%- if flash[:notice] || flash[:error]-%>
  <div class="span4">  
    <% alert_class= (flash[:error].blank?)? "alert-success" : "alert-danger" %>
    <% msg = (flash[:error].blank?)? flash[:notice] : flash[:error] %>
    <div class="alert <%="#{alert_class}" %>">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= msg %>
    </div>
  </div>
<%- end -%>
	<%= yield %>
</div>
</body>
</html>
